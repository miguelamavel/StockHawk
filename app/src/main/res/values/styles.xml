<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailTitle">
        <item name="android:textSize">30sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="DetailText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/activity_detail_text_size</item>
        <item name="android:layout_marginStart">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_horizontal_margin</item>
    </style>

    <style name="DetailText.Start">
        <item name="android:layout_marginTop">@dimen/activity_vertical_skip</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="DetailText.End">
        <item name="android:textAlignment">textEnd</item>
    </style>

    <style name="DetailText.Top">
        <item name="android:layout_marginTop">@dimen/activity_vertical_skip</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <style name="DetailText.Bottom">
        <item name="android:textAlignment">textStart</item>
    </style>


    <style name="PlotStyle">
        <item name="titleTextSize">20sp</item>
        <item name="rangeTitleTextSize">13sp</item>
        <item name="domainTitleTextSize">13sp</item>
        <item name="graphMarginTop">20dp</item>
        <item name="graphMarginBottom">40dp</item>
        <item name="graphMarginLeft">15dp</item>
        <item name="graphMarginRight">10dp</item>
        <item name="domainLineThickness">1dp</item>
        <item name="rangeLineThickness">1dp</item>
        <item name="domainOriginLineThickness">2dp</item>
        <item name="rangeOriginLineThickness">2dp</item>
        <item name="legendTextSize">15sp</item>
        <item name="legendIconHeight">15dp</item>
        <item name="legendIconWidth">15dp</item>
        <item name="legendHeight">25dp</item>
        <item name="legendAnchor">right_bottom</item>
        <item name="borderColor">@color/ap_transparent</item>
        <item name="gridInsetTop">1dp</item>
        <item name="gridInsetBottom">20dp</item>
        <item name="gridInsetLeft">25dp</item>
        <item name="gridInsetRight">1dp</item>
        <item name="lineLabels">left|bottom</item>
        <item name="lineLabelInsetTop">1dp</item>
        <item name="lineLabelInsetBottom">10dp</item>
        <item name="lineLabelInsetLeft">20dp</item>
        <item name="lineLabelInsetRight">1dp</item>
        <item name="lineLabelTextSizeTop">15sp</item>
        <item name="lineLabelTextSizeBottom">15sp</item>
        <item name="lineLabelTextSizeLeft">15sp</item>
        <item name="lineLabelTextSizeRight">15sp</item>
        <item name="lineLabelAlignLeft">right</item>
        <item name="lineLabelAlignRight">left</item>
        <item name="lineLabelAlignTop">left</item>
        <item name="lineLabelAlignBottom">right</item>
        <item name="lineLabelRotationBottom">-45</item>
        <item name="lineLabelRotationTop">-45</item>
        <item name="lineExtensionLeft">3dp</item>
        <item name="lineExtensionBottom">3dp</item>
    </style>
    <style name="PlotStyle.Dark">
        <item name="android:background">@color/colorBackground</item>
        <item name="backgroundColor">@color/colorBackground</item>
        <item name="graphBackgroundColor">@color/colorBackground</item>
        <item name="gridBackgroundColor">@color/colorBackground</item>
        <item name="domainLineColor">@color/off_white</item>
        <item name="rangeLineColor">@color/off_white</item>
        <item name="domainOriginLineColor">@color/off_white</item>
        <item name="rangeOriginLineColor">@color/off_white</item>
        <item name="lineLabelTextColorTop">@color/off_white</item>
        <item name="lineLabelTextColorBottom">@color/off_white</item>
        <item name="lineLabelTextColorLeft">@color/off_white</item>
        <item name="lineLabelTextColorRight">@color/off_white</item>
        <item name="titleTextColor">@color/ap_white</item>
        <item name="domainTitleTextColor">@color/ap_white</item>
        <item name="rangeTitleTextColor">@color/ap_white</item>
        <item name="legendTextColor">@color/ap_white</item>
    </style>

    <dimen name="activity_detail_text_size">20dp</dimen>
</resources>
