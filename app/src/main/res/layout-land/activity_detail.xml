<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.udacity.stockhawk.ui.DetailActivity">

    <!-- Plot history rui ricardo poster suica -->
    <com.androidplot.xy.XYPlot
        android:id="@+id/activity_detail_plot"
        style="@style/PlotStyle.Dark"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        app:title="@string/activity_detail_plot_title"
        app:rangeTitle="range"
        app:domainTitle="domain"
        app:lineLabels="left|bottom"
        app:lineLabelRotationBottom="-45"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginEnd="@dimen/activity_horizontal_margin"/>

    <android.support.v7.widget.GridLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/detail_accent_pane_background"
        android:paddingBottom="@dimen/activity_vertical_padding"
        android:paddingTop="@dimen/activity_vertical_padding"
        android:paddingLeft="@dimen/activity_horizontal_padding"
        android:paddingStart="@dimen/activity_horizontal_padding"
        android:paddingRight="@dimen/activity_horizontal_padding"
        android:paddingEnd="@dimen/activity_horizontal_padding"
        app:columnCount="1">

        <TextView
            android:id="@+id/activity_detail_current_price_title"
            style="@style/DetailText.Top"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginBottom="0dp"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:text="@string/detail_current_price"/>
        <TextView
            android:id="@+id/activity_detail_current_price"
            style="@style/DetailText.Bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_gravity="fill"
            tools:text="49.999"/>

        <TextView
            android:id="@+id/activity_detail_abs_change_title"
            style="@style/DetailText.Top"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="16dp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:text="@string/detail_abs_change"/>
        <TextView
            android:id="@+id/activity_detail_abs_change"
            style="@style/DetailText.Bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_gravity="fill"
            tools:text="0.34"/>

        <TextView
            android:id="@+id/activity_detail_percentage_change_title"
            style="@style/DetailText.Top"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:layout_marginTop="16dp"
            app:layout_gravity="fill"
            app:layout_rowWeight="1"
            android:text="@string/detail_percentage_change"/>
        <TextView
            android:id="@+id/activity_detail_percentage_change"
            style="@style/DetailText.Bottom"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            app:layout_gravity="fill"
            tools:text="1.54"/>
    </android.support.v7.widget.GridLayout>
</LinearLayout>
